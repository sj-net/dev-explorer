<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:uie="clr-namespace:FileExplorer.UIExtensions"
                    xmlns:controls="clr-namespace:FileExplorer.Controls">
    <Style x:Key="CustomWindowStyle"
           TargetType="{x:Type Window}">
        <Setter Property="Background"
                Value="{StaticResource Brushes.Background.Colours.Artboard}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Window}">
                    <Grid>
                        <Border x:Name="PART_Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding Background}"
                                BorderThickness="8">
                            <AdornerDecorator>
                                <ContentPresenter />
                            </AdornerDecorator>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="WindowState"
                                 Value="Maximized">
                            <Setter TargetName="PART_Border"
                                    Property="BorderThickness"
                                    Value="8" />
                        </Trigger>
                        <Trigger Property="WindowState"
                                 Value="Minimized">
                            <Setter TargetName="PART_Border"
                                    Property="BorderThickness"
                                    Value="0" />
                        </Trigger>
                        <Trigger Property="WindowState"
                                 Value="Normal">
                            <Setter TargetName="PART_Border"
                                    Property="BorderThickness"
                                    Value="0" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome CaptionHeight="30"
                              CornerRadius="4"
                              GlassFrameThickness="0"
                              NonClientFrameEdges="None"
                              ResizeBorderThickness="5"
                              UseAeroCaptionButtons="False" />
            </Setter.Value>
        </Setter>
        <Setter Property="WindowState"
                Value="Maximized" />
    </Style>
    <Style x:Key="WindowMinimizeButtonStyle"
           TargetType="{x:Type Button}">
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="Foreground"
                Value="{StaticResource Brushes.Text.Colours.Body.Text.ICONs}" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="HorizontalAlignment"
                Value="Center" />
        <Setter Property="BorderThickness"
                Value="0" />
        <Setter Property="Cursor"
                Value="Hand" />
        <Setter Property="FocusVisualStyle"
                Value="{x:Null}" />
        <Setter Property="WindowChrome.IsHitTestVisibleInChrome"
                Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="PART_Border"
                            Background="{TemplateBinding Background}"
                            Padding="7.5">
                        <ContentControl x:Name="PART_Icon"
                                        Template="{StaticResource Window_MinimizeIcon}"
                                        Foreground="{TemplateBinding Foreground}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="PART_Border"
                                    Property="Background"
                                    Value="{StaticResource Brushes.Others.CTA.MouseHover.WindowControlButton}" />
                            <Setter TargetName="PART_Border"
                                    Property="ToolTip"
                                    Value="Minimize" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="WindowMaxmizeButtonStyle"
           TargetType="{x:Type ToggleButton}">
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="HorizontalAlignment"
                Value="Center" />
        <Setter Property="Foreground"
                Value="{StaticResource Brushes.Text.Colours.Body.Text.ICONs}" />
        <Setter Property="LayoutTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1.5" />
            </Setter.Value>
        </Setter>
        <Setter Property="Margin"
                Value="0" />
        <Setter Property="Content"
                Value="{StaticResource Window_MaximizeIcon}" />
        <Setter Property="VerticalAlignment"
                Value="Stretch" />
        <Setter Property="FocusVisualStyle"
                Value="{x:Null}" />
        <Setter Property="WindowChrome.IsHitTestVisibleInChrome"
                Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToggleButton}">
                    <Border x:Name="PART_Border"
                            Padding="5"
                            Background="{TemplateBinding Background}">
                        <Viewbox Height="10"
                                 Width="10">
                            <ContentControl x:Name="PART_Icon"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Template="{TemplateBinding  Content}"
                                            Foreground="{TemplateBinding Foreground}" />
                        </Viewbox>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="PART_Border"
                                    Property="Background"
                                    Value="{StaticResource Brushes.Others.CTA.MouseHover.WindowControlButton}" />
                            <Setter TargetName="PART_Border"
                                    Property="Cursor"
                                    Value="Hand" />
                        </Trigger>
                        <Trigger Property="IsChecked"
                                 Value="True">
                            <Setter Property="ToolTip"
                                    Value="Maximize" />
                        </Trigger>
                        <Trigger Property="IsChecked"
                                 Value="False">
                            <Setter Property="ToolTip"
                                    Value="Restore" />
                        </Trigger>
                        <DataTrigger Binding="{Binding WindowState, RelativeSource={RelativeSource AncestorType=Window}}"
                                     Value="Normal">
                            <Setter Property="Content"
                                    Value="{StaticResource Window_MaximizeIcon}" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding WindowState, RelativeSource={RelativeSource AncestorType=Window}}"
                                     Value="Maximized">
                            <Setter Property="Content"
                                    Value="{StaticResource Window_RestoreIcon}" />
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="WindowCloseButtonStyle"
           TargetType="{x:Type Button}">
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="Foreground"
                Value="{StaticResource Brushes.Text.Colours.Body.Text.ICONs}" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="HorizontalAlignment"
                Value="Center" />
        <Setter Property="BorderThickness"
                Value="0" />
        <Setter Property="Cursor"
                Value="Hand" />
        <Setter Property="FocusVisualStyle"
                Value="{x:Null}" />
        <Setter Property="WindowChrome.IsHitTestVisibleInChrome"
                Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="PART_Border"
                            Padding="10"
                            Background="{TemplateBinding Background}">
                        <Viewbox>
                            <ContentControl x:Name="PART_Icon"
                                            Template="{StaticResource HeaderCloseIcon}"
                                            Foreground="{TemplateBinding Foreground}" />
                        </Viewbox>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="PART_Border"
                                    Property="Background"
                                    Value="{StaticResource Brushes.Others.CTA.MouseHover.WindowCloseButton}" />
                            <Setter TargetName="PART_Border"
                                    Property="Cursor"
                                    Value="Hand" />
                            <Setter TargetName="PART_Border"
                                    Property="ToolTip"
                                    Value="Close" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="IconButtonStyle"
           TargetType="{x:Type Button}">
        <Setter Property="Foreground"
                Value="{StaticResource Brushes.Others.CTA.Button.Default.Outline.Text.Checked.Checkbox.ICONs}" />
        <Setter Property="Height"
                Value="20" />
        <Setter Property="Width"
                Value="20" />
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="Cursor"
                Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}">
                        <Viewbox>
                            <ContentControl x:Name="Icon"
                                            Foreground="{TemplateBinding Foreground}"
                                            Template="{TemplateBinding Content}" />
                        </Viewbox>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter Property="Foreground"
                                    Value="{StaticResource Brushes.Others.CTA.Menu.Hover}" />
                        </Trigger>
                        <Trigger Property="IsFocused"
                                 Value="True">
                            <Setter Property="Foreground"
                                    Value="{StaticResource Brushes.Others.CTA.Button.Default.Outline.Text.Checked.Checkbox.ICONs}" />
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="False">
                            <Setter Property="Foreground"
                                    Value="{StaticResource Brushes.Others.CTA.Unchecked.Checkbox}" />
                        </Trigger>
                        <Trigger Property="IsPressed"
                                 Value="True">
                            <Setter Property="Foreground"
                                    Value="{StaticResource Brushes.Others.CTA.Menu.Hover}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="VerticalAlignment"
                Value="Center" />
    </Style>
    <Style x:Key="Drag.Small"
           TargetType="{x:Type Button}">
        <Setter Property="MinHeight"
                Value="30" />
        <Setter Property="MinWidth"
                Value="76" />
        <Setter Property="Foreground"
                Value="{StaticResource Brushes.Others.CTA.Button.Default.Outline.Text.Checked.Checkbox.ICONs}" />
        <Setter Property="BorderThickness"
                Value="1" />
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="HorizontalAlignment"
                Value="Center" />
        <Setter Property="Padding"
                Value="8,7,5,7" />
        <Setter Property="Cursor"
                Value="Hand" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="BorderBrush"
                Value="{StaticResource Brushes.Others.CTA.Button.Default.Outline.Text.Checked.Checkbox.ICONs}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="PART_Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}"
                            CornerRadius="4">
                        <Grid  HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                               VerticalAlignment="{TemplateBinding VerticalAlignment}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Viewbox Width="20"
                                     Height="20">
                                <ContentControl x:Name="PART_Icon"
                                                Template="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=(uie:AttachedProperties.Icon)}"
                                                Foreground="{TemplateBinding Foreground}" />
                            </Viewbox>
                            <TextBlock Style="{StaticResource Text.Small.Medium}"
                                       Margin="8,0,0,0"
                                       Text="{TemplateBinding Content}"
                                       Grid.Column="1"
                                       Foreground="{TemplateBinding Foreground}"
                                       Background="Transparent"
                                       VerticalAlignment="Center" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="PART_Border"
                                    Property="Background"
                                    Value="{StaticResource Brushes.Others.CTA.Button.Active.Hover.Toggle.Button.Background}" />
                            <Setter Property="Foreground"
                                    Value="{StaticResource Brushes.Others.CTA.Button.Default.Outline.Text.Checked.Checkbox.ICONs}" />
                        </Trigger>
                        <Trigger Property="IsPressed"
                                 Value="True">
                            <Setter TargetName="PART_Border"
                                    Property="Background"
                                    Value="{StaticResource Brushes.Others.CTA.Button.Active.Hover.Toggle.Button.Background}" />
                            <Setter Property="BorderBrush"
                                    Value="Transparent" />
                            <Setter Property="Foreground"
                                    Value="{StaticResource Brushes.Others.CTA.Button.Default.Outline.Text.Checked.Checkbox.ICONs}" />
                            <Setter Property="FontFamily"
                                    Value="{StaticResource Bold}" />
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="False">
                            <Setter Property="Background"
                                    Value="Transparent" />
                            <Setter Property="BorderThickness"
                                    Value="1" />
                            <Setter Property="BorderBrush"
                                    Value="{StaticResource Brushes.Others.CTA.Menu.ICONs.Button.Default.Input.Ghost.Text}" />
                            <Setter Property="Foreground"
                                    Value="{StaticResource Brushes.Others.CTA.Unchecked.Checkbox}" />
                            <Setter Property="Cursor"
                                    Value="Arrow" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="Primary.Large.V9"
           TargetType="{x:Type Button}">
        <Setter Property="MinHeight"
                Value="56" />
        <Setter Property="MinWidth"
                Value="117" />
        <Setter Property="Foreground"
                Value="{StaticResource Brushes.Others.CTA.Menu.Focused}" />
        <Setter Property="BorderThickness"
                Value="1" />
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="Cursor"
                Value="Hand" />
        <Setter Property="HorizontalContentAlignment"
                Value="Center" />
        <Setter Property="VerticalContentAlignment"
                Value="Center" />
        <Setter Property="BorderBrush"
                Value="{StaticResource Brushes.Others.CTA.Menu.Focused}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="PART_Border"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            MinHeight="{TemplateBinding MinHeight}"
                            MinWidth="{TemplateBinding MinWidth}"
                            Padding="{TemplateBinding Padding}">
                        <TextBlock x:Name="PART_Content"
                                   Style="{StaticResource Button.Text.Default}"
                                   Margin="5,0"
                                   Text="{TemplateBinding Content}"
                                   Background="Transparent"
                                   Foreground="{TemplateBinding Foreground}"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                   VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="PART_Border"
                                    Property="Background"
                                    Value="{StaticResource Brushes.Others.CTA.Button.Active.Hover.Toggle.Button.Background}" />
                            <Setter Property="Foreground"
                                    Value="{StaticResource Brushes.Others.CTA.Menu.Focused}" />
                        </Trigger>
                        <Trigger Property="IsPressed"
                                 Value="True">
                            <Setter TargetName="PART_Border"
                                    Property="Background"
                                    Value="{StaticResource Brushes.Others.CTA.Button.Active.Hover.Toggle.Button.Background}" />
                            <Setter Property="BorderBrush"
                                    Value="Transparent" />
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="False">
                            <Setter Property="Cursor"
                                    Value="Arrow" />
                            <Setter Property="Background"
                                    Value="Transparent" />
                            <Setter Property="BorderBrush"
                                    Value="{StaticResource Brushes.Others.CTA.Unchecked.Checkbox}" />
                            <Setter Property="Foreground"
                                    Value="{StaticResource Brushes.Others.CTA.Unchecked.Checkbox}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <ControlTemplate x:Key="TextBlock.Default.Template"
                     TargetType="{x:Type controls:DevExplorerTextBlock}">
        <Grid x:Name="PART_Root"
              Focusable="{TemplateBinding Focusable}"
              Background="{TemplateBinding Background}"
              FocusVisualStyle="{TemplateBinding FocusVisualStyle}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="PART_TextBlock"
                       Grid.Column="0"
                       Text="{TemplateBinding Text}"
                       Foreground="{TemplateBinding Foreground}"
                       FontSize="{TemplateBinding FontSize}"
                       FontFamily="{TemplateBinding FontFamily}"
                       Focusable="{TemplateBinding Focusable}"
                       IsHitTestVisible="{TemplateBinding IsHitTestVisible}"
                       TextWrapping="{TemplateBinding TextWrapping}"
                       MaxWidth="{TemplateBinding MaxWidth}"
                       LineHeight="{Binding LineHeight, RelativeSource={RelativeSource Mode=Self}}"
                       LineStackingStrategy="{Binding LineStackingStrategy, RelativeSource={RelativeSource Mode=Self}}"
                       FocusVisualStyle="{TemplateBinding FocusVisualStyle}" />
            <ContentPresenter x:Name="PART_RequiredField_Mark"
                              Content=" * "
                              Margin="5,0,0,0"
                              Grid.Column="1"
                              Visibility="Collapsed"
                              Focusable="False"
                              TextElement.Foreground="#FFC20404"
                              FocusVisualStyle="{TemplateBinding FocusVisualStyle}">
                <ContentPresenter.Resources>
                    <Style TargetType="{x:Type TextBlock}"
                           BasedOn="{StaticResource H1.Header.Bold}" />
                </ContentPresenter.Resources>
            </ContentPresenter>
            <Button x:Name="PART_TextBlock_CopyButton"
                    Focusable="False"
                    Grid.Column="2"
                    Margin="5,0,0,0"
                    Visibility="Hidden"
                    Height="18"
                    Width="18"
                    AutomationProperties.AutomationId="TextBlock_Copy_CTA"
                    Content="{StaticResource Miscellaneous.Copy}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Style="{StaticResource IconButtonStyle}"
                    FocusVisualStyle="{TemplateBinding FocusVisualStyle}" />
        </Grid>
        <ControlTemplate.Triggers>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding IsMouseOver, ElementName=PART_Root}"
                               Value="True" />
                    <Condition Binding="{Binding CanCopy, RelativeSource={RelativeSource Mode=Self}}"
                               Value="True" />
                </MultiDataTrigger.Conditions>
                <MultiDataTrigger.Setters>
                    <Setter Property="Cursor"
                            Value="Hand" />
                    <Setter TargetName="PART_TextBlock_CopyButton"
                            Property="Visibility"
                            Value="Visible" />
                </MultiDataTrigger.Setters>
            </MultiDataTrigger>
            <DataTrigger Binding="{Binding Text, ElementName=PART_TextBlock}"
                         Value="{x:Null}">
                <Setter TargetName="PART_TextBlock_CopyButton"
                        Property="Visibility"
                        Value="Collapsed" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Text, ElementName=PART_TextBlock}"
                         Value="">
                <Setter TargetName="PART_TextBlock_CopyButton"
                        Property="Visibility"
                        Value="Collapsed" />
            </DataTrigger>
            <Trigger Property="CanCopy"
                     Value="False">
                <Setter TargetName="PART_TextBlock_CopyButton"
                        Property="Visibility"
                        Value="Hidden" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    <Style x:Key="Body.Text.DevTextBlock"
           TargetType="{x:Type controls:DevExplorerTextBlock}">
        <Setter Property="FontSize"
                Value="{StaticResource Font_Body_Text}" />
        <Setter Property="FontFamily"
                Value="{StaticResource Medium}" />
        <Setter Property="TextBlock.LineHeight"
                Value="{StaticResource LineHeight_Body_Text}" />
        <Setter Property="TextBlock.LineStackingStrategy"
                Value="BlockLineHeight" />
        <Setter Property="Template"
                Value="{StaticResource TextBlock.Default.Template}" />
    </Style>
    <!--#region Scroll Styles-->
    <Style x:Key="ScrollThumbs"
           TargetType="{x:Type Thumb}">
        <Setter Property="OverridesDefaultStyle"
                Value="True" />
        <Setter Property="IsTabStop"
                Value="False" />
        <Setter Property="Foreground"
                Value="{StaticResource Brushes.Others.CTA.Menu.ICONs.Button.Default.Input.Ghost.Text}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Thumb}">
                    <Grid x:Name="PART_Grid">
                        <Rectangle Width="Auto"
                                   Height="Auto"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch"
                                   Fill="Transparent" />
                        <Border x:Name="PART_ThumbBorder"
                                Width="Auto"
                                Height="Auto"
                                Background="{TemplateBinding Foreground}"
                                CornerRadius="4" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter Property="CornerRadius"
                                    Value="10"
                                    TargetName="PART_ThumbBorder" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="Scrollbar.Option2.Vertical"
           TargetType="{x:Type ScrollBar}">
        <Setter Property="Stylus.IsPressAndHoldEnabled"
                Value="False" />
        <Setter Property="Background"
                Value="{StaticResource Brushes.Background.Colours.Side.Menu.Toggle.Button.Not.Selected.Off}" />
        <Setter Property="BorderBrush"
                Value="Transparent" />
        <Setter Property="BorderThickness"
                Value="0" />
        <Setter Property="MinWidth"
                Value="10" />
        <Setter Property="Stylus.IsFlicksEnabled"
                Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ScrollBar}">
                    <Border x:Name="PART_BorderRoot"
                            Width="{TemplateBinding MinWidth}"
                            Background="{TemplateBinding Background}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            CornerRadius="5">
                        <Grid SnapsToDevicePixels="True">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Track x:Name="PART_Track"
                                   Grid.Row="0"
                                   Focusable="False"
                                   IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb x:Name="PART_Thumb"
                                           Background="{TemplateBinding Foreground}"
                                           Style="{StaticResource ScrollThumbs}"
                                           Width="8"
                                           HorizontalAlignment="Center" />
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton x:Name="PART_PageUp"
                                                  Focusable="False"
                                                  Opacity="0" />
                                </Track.IncreaseRepeatButton>
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton x:Name="PART_PageDown"
                                                  Focusable="False"
                                                  Opacity="0" />
                                </Track.DecreaseRepeatButton>
                            </Track>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled"
                                 Value="False">
                            <Setter TargetName="PART_Thumb"
                                    Property="Visibility"
                                    Value="Collapsed" />
                        </Trigger>
                        <Trigger Property="IsMouseOver"
                                 SourceName="PART_Thumb"
                                 Value="True">
                            <Setter Property="Width"
                                    Value="15"
                                    TargetName="PART_Thumb" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="Scrollbar.Option2.Horizontal"
           TargetType="{x:Type ScrollBar}">
        <Setter Property="Background"
                Value="{StaticResource Brushes.Background.Colours.Side.Menu.Toggle.Button.Not.Selected.Off}" />
        <Setter Property="MinHeight"
                Value="10" />
        <Setter Property="BorderBrush"
                Value="Transparent" />
        <Setter Property="BorderThickness"
                Value="0" />
        <Setter Property="Stylus.IsPressAndHoldEnabled"
                Value="False" />
        <Setter Property="Stylus.IsFlicksEnabled"
                Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ScrollBar}">
                    <Border x:Name="PART_GridRoot"
                            Height="{TemplateBinding MinHeight}"
                            Background="{TemplateBinding Background}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            CornerRadius="5">
                        <Grid SnapsToDevicePixels="True">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Track x:Name="PART_Track"
                                   Grid.Row="0"
                                   Focusable="False"
                                   IsDirectionReversed="False">
                                <Track.Thumb>
                                    <Thumb x:Name="PART_Thumb"
                                           Background="{TemplateBinding Foreground}"
                                           Height="8"
                                           VerticalAlignment="Center"
                                           Style="{StaticResource ScrollThumbs}" />
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton x:Name="PART_PageUp"
                                                  Focusable="False"
                                                  Opacity="0" />
                                </Track.IncreaseRepeatButton>
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton x:Name="PART_PageDown"
                                                  Focusable="False"
                                                  Opacity="0" />
                                </Track.DecreaseRepeatButton>
                            </Track>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 SourceName="PART_Thumb"
                                 Value="True">
                            <Setter Property="Height"
                                    Value="15"
                                    TargetName="PART_Thumb" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <ControlTemplate x:Key="ScrollViewerControlTemplate"
                     TargetType="{x:Type ScrollViewer}">
        <Grid x:Name="Grid"
              Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ScrollContentPresenter x:Name="PART_ScrollContentPresenter"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="{TemplateBinding Padding}"
                                    CanContentScroll="{TemplateBinding CanContentScroll}"
                                    Content="{TemplateBinding Content}"
                                    ContentTemplate="{TemplateBinding ContentTemplate}" />
            <ScrollBar x:Name="PART_VerticalScrollBar"
                       Grid.Row="0"
                       Grid.Column="1"
