                                 Value="False">
                            <Setter TargetName="PART_CheckBoxBorder"
                                    Property="Background"
                                    Value="Transparent" />
                            <Setter TargetName="PART_CheckBoxBorder"
                                    Property="BorderBrush"
                                    Value="{StaticResource Brushes.Others.CTA.Unchecked.Checkbox}" />
                            <Setter Property="Foreground"
                                    Value="{StaticResource Brushes.Others.CTA.Unchecked.Checkbox}" />
                            <Setter Property="Cursor"
                                    Value="Arrow" />
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsChecked"
                                           Value="True" />
                                <Condition Property="IsMouseOver"
                                           Value="True" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="PART_CheckBoxBorder"
                                    Property="Background"
                                    Value="{StaticResource Brushes.Others.CTA.Button.Active.Hover.Toggle.Button.Background}" />
                            <Setter TargetName="PART_Icon"
                                    Property="Foreground"
                                    Value="{StaticResource Brushes.Others.CTA.Button.Default.Outline.Text.Checked.Checkbox.ICONs}" />
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsChecked"
                                           Value="{x:Null}" />
                                <Condition Property="IsMouseOver"
                                           Value="True" />
                            </MultiTrigger.Conditions>
