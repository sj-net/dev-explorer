            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CheckBox}">
                    <Grid HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                          VerticalAlignment="{TemplateBinding VerticalAlignment}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Border x:Name="PART_CheckBoxBorder"
                                CornerRadius="4"
                                Height="20"
                                Width="20"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                AutomationProperties.AutomationId="Id"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentControl x:Name="PART_Icon"
                                            Visibility="Collapsed"
                                            Template="{StaticResource CheckBox_Tick_Icon}"
                                            Foreground="{TemplateBinding Foreground}" />
                        </Border>
                        <TextBlock Style="{StaticResource Body.Text}"
                                   Text="{TemplateBinding Content}"
                                   Grid.Column="1"
                                   TextWrapping="Wrap"
                                   Margin="10 0 0 0"
                                   HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                   VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="PART_CheckBoxBorder"
                                    Property="BorderBrush"
                                    Value="{StaticResource Brushes.Others.CTA.Menu.Hover}" />
                        </Trigger>
                        <Trigger Property="IsChecked"
                                 Value="True">
                            <Setter TargetName="PART_Icon"
                                    Property="Visibility"
                                    Value="Visible" />
                            <Setter TargetName="PART_Icon"
                                    Property="Foreground"
                                    Value="{StaticResource Brushes.Text.Colours.Body.Text.ICONs}" />
                            <Setter TargetName="PART_CheckBoxBorder"
                                    Property="Background"
                                    Value="{StaticResource Brushes.Others.CTA.Button.Default.Outline.Text.Checked.Checkbox.ICONs}" />
                            <Setter TargetName="PART_CheckBoxBorder"
                                    Property="BorderThickness"
                                    Value="0" />
                        </Trigger>
                        <Trigger Property="IsChecked"
                                 Value="{x:Null}">
                            <Setter TargetName="PART_Icon"
                                    Property="Visibility"
                                    Value="Visible" />
                            <Setter TargetName="PART_Icon"
                                    Property="Content"
                                    Value="{StaticResource CheckBox_Unknown_Icon}" />
                            <Setter  TargetName="PART_CheckBoxBorder"
                                     Property="Background"
                                     Value="{StaticResource Brushes.Others.CTA.Button.Default.Outline.Text.Checked.Checkbox.ICONs}" />
                            <Setter TargetName="PART_CheckBoxBorder"
                                    Property="BorderThickness"
                                    Value="0" />
