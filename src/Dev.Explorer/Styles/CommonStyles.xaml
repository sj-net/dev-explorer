                                    Property="Background"
                                    Value="{StaticResource Brushes.Others.CTA.Unchecked.Checkbox}" />
                            <Setter Property="Foreground"
                                    Value="{StaticResource Brushes.Others.CTA.Unchecked.Checkbox}" />
                            <Setter TargetName="PART_CheckBoxBorder"
                                    Property="BorderThickness"
                                    Value="0" />
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
